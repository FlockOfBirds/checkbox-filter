<?xml version="1.0" encoding="utf-8"?>
<widget id="com.mendix.widget.custom.checkboxfilter.CheckboxFilter" offlineCapable="true" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Checkbox filter</name>
    <description>Filter Mendix list views using a checkbox</description>
    <icon/>
    <properties>
        <property key="listviewEntity" type="entity">
            <caption>List view entity</caption>
            <category>General</category>
            <description>Entity whose will be filtered. This entity should match the list view entity</description>
        </property>
        <property key="defaultChecked" type="boolean" defaultValue="false">
            <caption>Default checked</caption>
            <category>General</category>
            <description>Checks the checkbox on initial loading</description>
        </property>
        <property key="filterBy" type="enumeration" defaultValue="attribute">
            <caption>Filter on</caption>
            <category>Checked filter</category>
            <description>Select the method of filtering</description>
            <enumerationValues>
                <enumerationValue key="attribute">Attribute</enumerationValue>
                <enumerationValue key="XPath">XPath</enumerationValue>
            </enumerationValues>
        </property>
        <property key="attribute" type="attribute" required="false" entityProperty="listviewEntity">
            <caption>Attribute</caption>
            <category>Checked filter</category>
            <description>The attribute to apply filter</description>
            <attributeTypes>
                <attributeType name="String"/>
                <attributeType name="Integer"/>
                <attributeType name="Decimal"/>
                <attributeType name="Boolean"/>
                <attributeType name="Enum"/>
            </attributeTypes>
        </property>
        <property key="attributeValue" type="string" required="false">
            <caption>Attribute value</caption>
            <category>Checked filter</category>
            <description>Value of the attribute to be matching (used when filtering on attribute)</description>
        </property>
        <property key="constraint" type="entityConstraint" required="false" entityProperty="listviewEntity">
            <caption>XPath constraint</caption>
            <category>Checked filter</category>
            <description>Constraint on the data (used when comparison is XPath)</description>
        </property>
        <property key="unCheckedFilterBy" type="enumeration" defaultValue="attribute">
            <caption>Unfilter on</caption>
            <category>Unchecked filter</category>
            <description>Select the method of filtering</description>
            <enumerationValues>
                <enumerationValue key="nothing">Nothing (Show All)</enumerationValue>
                <enumerationValue key="attribute">Attribute</enumerationValue>
                <enumerationValue key="XPath">XPath</enumerationValue>
            </enumerationValues>
        </property>
        <property key="unCheckedAttribute" type="attribute" required="false" entityProperty="listviewEntity">
            <caption>Unfilter attribute</caption>
            <category>Unchecked filter</category>
            <description>The attribute to apply the filter (used when filtering on attribute)</description>
            <attributeTypes>
                <attributeType name="String"/>
                <attributeType name="Integer"/>
                <attributeType name="Decimal"/>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="unCheckedAttributeValue" type="string" required="false">
            <caption>Unfilter attribute value</caption>
            <category>Unchecked filter</category>
            <description>Value of the attribute to be matching (used when filtering on attribute)</description>
        </property>
        <property key="unCheckedConstraint" type="entityConstraint" required="false" entityProperty="listviewEntity">
            <caption>Unfilter XPath constraint</caption>
            <category>Unchecked filter</category>
            <description>Constraint on the data (used when comparison is XPath)</description>
        </property>
    </properties>
</widget>
